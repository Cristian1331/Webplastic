
@{
    ViewBag.Title = "CreateArticle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <section class="ftco-appointment ftco-section img pt-1" style="background-image: url(~/Content/images/bg_2.jpg);">
        <div class="overlay"> </div>
        <div class="col-md-10 half ftco-animate" style="margin: 10px auto;">
            <h2 class="mb-4 m-auto">Mis datos</h2>
            <form action="@Url.Action("StorageArticle","Administrator")" method="post" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-sm-12 text-center">
                        <h4 style="color:white;">Imagen del Producto</h4>
                        <img src="~/Content/uploads/Article.png" id="imgUser" class="img-thumbnail" width="150" height="150" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-4 text-center"></div>
                    <div class="col-sm-4">
                        <div class="input-group-prepend">
                            <label class="custom-file-label" for="chooseflies">Buscar</label>
                        </div>
                        <input type="file" name="image" class="custom-file-input" id="customFile" required
                               onchange="document.getElementById('imgUser').src = window.URL.createObjectURL(this.files[0]);
                                                                    document.getElementById('chooseflies').innerHTML = $('#customFile').val()
                                                                ">
                    </div>
                    <div class="col-sm-4 text-center"></div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6 p-3">
                        <label for="inputEmail4">Nombre del articulo</label>
                        <input type="text" class="form-control" name="Name" required>
                    </div>
                    <div class="form-group col-md-6 p-3">
                        <label for="inputAddress2">Precio</label>
                        <input type="number" step="0.001" class="form-control" name="Price" required>
                    </div>
                    <div class="form-group col-md-6 p-3">
                        <label for="inputAddress2">Category</label>
                        <select data-placeholder="Elegir categoría" class="form-control select" name="idCategory" data-container-css-class="bg-teal-400" required>
                            <option></option>
                            <optgroup label="Opciones">
                                @foreach (var category in ViewBag.Category)
                                {
                                    <option value="@category["idCategory"]">@category["Category"]</option>
                                }
                            </optgroup>
                        </select>
                    </div>
                    <div class="form-group col-md-6 p-3">
                        <label for="inputAddress2">Descripción</label>
                        <input type="text" class="form-control" name="Description" required>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group col-md-6 mx-auto d-block">
                            <input type="submit" value="Enviar" class="btn btn-primary btn-lg btn-block py-3 px-4">
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </section>
