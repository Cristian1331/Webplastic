<!--form------------------------------------------------------------------------------------>

<section class="ftco-appointment ftco-section img pt-1" style="background-image: url(images/bg_2.jpg);">
    <div class="overlay"> </div>
    <div class="col-md-4 half ftco-animate" style="margin: 10px auto;">
        <h2 class="mb-4">Bienvenido</h2>
        <form action="@Url.Action("CreateUser")" >
            <div class="form-group col-md-12 p-0">
                <label for="">Nombre</label>
                <input type="text" class="form-control" name="Name" required>
                <label for="">Apellido</label>
                <input type="text" class="form-control" name="Last" required>
            </div>
            <div class="form-group col-md-12 p-0">
                <label for="inputAddress1">Correo</label>
                <input type="email" class="form-control" name="Email" required>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputEmail4">Contraseña</label>
                    <input type="password" class="form-control" name="Password" required>
                </div>
                <div class="form-group col-md-6">
                    <label for="inputPassword4">Confirmar contraseña</label>
                    <input type="password" class="form-control" id="confirmarContraseña">
                </div>
            </div>
            <div class="form-group">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="gridCheck">
                    <label class="form-check-label" for="gridCheck">
                        Acepto los términos y condiciones
                    </label>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group col-md-12">
                    <input type="submit" value="Enviar" class="btn btn-primary py-3 px-4">
                </div>
            </div>
        </form>
    </div>
</section>
